<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <SolidColorBrush x:Key="MainClientArea" Color="{DynamicResource xMainClientArea}"/>
    <SolidColorBrush x:Key="TopBarBackground" Color="{DynamicResource xTopbarBackground}"/>
    <SolidColorBrush x:Key="ControlButtonOverColor" Color="{DynamicResource xControlButtonOver}"/>
    <SolidColorBrush x:Key="ControlButtonForeground" Color="{DynamicResource xControlButtonForeground}"/>
    <SolidColorBrush x:Key="ControlButtonBackground" Color="{DynamicResource xControlButtonBackground}"/>
    <SolidColorBrush x:Key="ControlButtonPressed" Color="{DynamicResource xControlButtonPressed}"/>
    <SolidColorBrush x:Key="StatusBarBackGround" Color="{DynamicResource xStatusBarBackGround}"/>
    <SolidColorBrush x:Key="StatusBarTextForeGround" Color="{DynamicResource xStatusBarTextForeground}"/>
    <SolidColorBrush x:Key="MainWindowBorderColor" Color="{DynamicResource xMainWindowBorderColor}"/>
    <SolidColorBrush x:Key="MenuForeGround" Color="{DynamicResource xMenuForeground}"/>
    <SolidColorBrush x:Key="MenuItemForeground" Color="{DynamicResource xMenuItemForeground}"/>
</ResourceDictionary>